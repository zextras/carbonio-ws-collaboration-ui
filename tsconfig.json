{
  "extends": "@zextras/carbonio-ui-configs/rules/typescript.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/network/xmpp/decs.d.ts",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "test-utils": ["./utils/test-utils"]
    }
  },
}
